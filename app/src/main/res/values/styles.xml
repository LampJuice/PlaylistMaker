<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_option">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_menu</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>


    </style>

    <style name="text_nav">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_nav</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ic_tint_2</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lines">1</item>

    </style>

    <style name="text_player">
        android:fontFamily="@font/ys_text_regular"
        android:textFontWeight="400"
        android:textSize="13sp"
    </style>
    <style name="tablayout_text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ph_button_text</item>

</style>
    <style name="button_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="cornerRadius">@dimen/main_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>


    </style>
</resources>